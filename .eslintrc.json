{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "off",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-unused-vars": [
            "off",
            { 
                "vars": "all", 
                "args": "after-used", 
                "ignoreRestSiblings": false
            }
        ],
        "no-console": [
            "warn",
            { "allow": [ "warn", "error" ] }
        ]
    }
}